doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/styles/style.css')
    script(src='/js/diagram.js')
  body

    //- Define mixin for toolbar icons at the top
    mixin toolbarIcon(src, alt)
      img(src=src alt=alt class='tool-icon')

    .layout-container
      //- Vertical toolbar section
      .toolbar
        +toolbarIcon('/icons/arrow.svg', 'Arrow Tool')
        +toolbarIcon('/icons/rectangle.svg', 'Rectangle Tool')
        +toolbarIcon('/icons/line.svg', 'Line Tool')
        // Add more toolbar icons as needed

      //- Canvas section for drawing diagrams
      .canvas-wrapper
        canvas#diagramCanvas(width='800' height='600')

    script.
      document.addEventListener('DOMContentLoaded', () => {
        console.log('ER Diagram Tool loaded!');
      })
